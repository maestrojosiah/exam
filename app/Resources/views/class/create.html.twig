{% extends 'base.html.twig' %}
{% block body %}
<body>
{{ include('templates/header.html.twig') }}        		
{{ include('templates/aside.html.twig') }}        		
{% embed "templates/content_draft.html.twig" %}
	{% block content %}
	<div class="col-lg-6">
	  <section class="panel">
	      <header class="panel-heading">
	          Add Class
				{% if not form.vars.valid %}
	              <div class="alert alert-warning">
	              <p>Please check your entries below</p>
	              </div>				
          		{% endif %}	          
	      </header>
	      <div class="panel-body">
	          {{ form_start(form, {'method': 'post'} ) }}
	              <div class="form-group">
	                  <label for="classs_c_title">Class Title</label>
	                  {{ form_row(form.c_title, {'attr': {'class': 'form-control', 'placeholder': 'Class Title' }}) }}
	              </div>
	              <div class="form-group">
	                  <label for="classs_class_teacher">Class Teacher</label>
	                  {{ form_row(form.class_teacher, {'attr': {'class': 'form-control', 'placeholder': 'Class Teacher' }}) }}
	              </div>
	              {{ form_widget(form.saveAndAdd, {'attr': {'class': 'btn btn-info pull-left', 'style': 'margin-right: 5px' }} ) }}
	              {{ form_row(form.save, {'attr': {'class': 'btn btn-primary pull-left margin-md'}}) }}
	              <a href="{{path('homepage')}}" class="btn btn-danger pull-right" style="margin-left: 5px;">DONE</a>
	              <a href="{{path('list_classes')}}" class="btn btn-danger pull-right">List</a>
	              
	          {{ form_end(form) }}

	      </div>
	  </section>
	</div>
	{% if app.user.classes is not empty %}
	<div class="col-lg-6">
	  <section class="panel">
	      <header class="panel-heading">
	          Added Classes
	      </header>
	      <div class="panel-body">
			<p>
				<ol>
					{% for class in app.user.classes %}
						<li>{{class.cTitle}}</li>
					{% endfor %}
				</ol>
			</p>
	      </div>
	  </section>
	</div>
	{% endif %}

{% endblock %}
{% endembed %}
{% endblock %}
{% block javascripts %}
  <script type="text/javascript">
    $(function() {
      $("#classs_c_title").focus();
    });    
  </script>
{% endblock %}